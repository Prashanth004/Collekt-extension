{
    "manifest_version": 2,
    "name": "Collekt",
    "version": "1.003",
    "description": "collect the contact detils",
    "icons": {
        "128": "icn128.png",
        "48": "icn48.png",
        "16": "icn16.png"
    },
    "browser_action": {
        "default_icon": "icn16.png",
        "default_title": "Collekt"
    },
  
    "background": {
        "scripts": [
            "socketio.js",
            "utils.js",
            "background.js",
            "eventPage.js",
            "api_call.js",
            "test.js",
            "jquery.js"
        ],
        "persistant": false
    },
    "web_accessible_resources": ["display.html","Login.html","serverDown.html"],
    "content_scripts": [
        {
            "matches": [
                "https://www.facebook.com/*",
                "https://twitter.com/*",
                "https://www.linkedin.com/*",
                "https://angel.co/*"
            ],
            "js": [
                
                "jquery.js",
                "socketio.js",
                "utils.js",
                "test.js",
                "content.js",
                "dialog.js",
                "login.js",
                "backened.js"
               
            ],
            "run_at": "document_idle",
            "all_frames": true,
            "css": [
                "content.css"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "webNavigation",
        "tabs",
        "https://bookmane.in/collekt",
        "https://bookmane.in/",
        "https://embed.tawk.to/*",
        "https://www.facebook.com/*",
        "https://twitter.com/*",
        "https://www.linkedin.com/*",
        "http://localhost/*",
        "http://139.59.5.116/*",
        "https://angel.co/*",
        "https://accounts.google.com/*",
        "https://prashanthc3.typeform.com/*",
        "http://bookmane.in/collekt/*",
        "https://cdnjs.cloudflare.com/*"
    ]
}