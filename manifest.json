{
    "manifest_version": 2,
    "name": "Collekt",
    "version": "1.020",
    "description": "collect the contact detils",
    "options_page": "cards.html",
    "icons": {
        "128": "icn128.png",
        "48": "icn48.png",
        "16": "icn16.png"
    },
    "browser_action": {
      
    },
  
    "background": {
        "scripts": [
            "socketio.js",
            "utils2.js",
            "api.js",
            "jquery.js",
            "eventPage.js",
            "background.js",
            "api_call.js",
            "test.js"
        ],
        "persistant": false
    },
    "web_accessible_resources": ["popup.html","Login.html","NoService.html", "addIframe.js","serverDown.html"],
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://angel.co/*",
                "https://www.linkedin.com/*",
                "https://www.facebook.com/*",
                "https://*/*"
            ],
            "js": [
               "socketio.js",
               "api.js",
               "utils2.js",
                "test.js",
                "content.js",
                "dialog.js"
             
            ],
            "run_at": "document_end",
            "all_frames": true,
            "css": [
                "content.css"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",
   
    "permissions": [
        "contextMenus",
        "storage",
        "webNavigation",
        "tabs",
        "https://bookmane.in/collekt",
        "https://bookmane.in/",
        "https://embed.tawk.to/*",
        "https://www.facebook.com/*",
        "https://twitter.com/*",
        "https://www.linkedin.com/*",
        "http://localhost/*",
        "http://139.59.5.116/*",
        "https://angel.co/*",
        "https://accounts.google.com/*",
        "https://prashanthc3.typeform.com/*",
        "http://bookmane.in/collekt/*",
        "https://cdnjs.cloudflare.com/*"
    ]
}